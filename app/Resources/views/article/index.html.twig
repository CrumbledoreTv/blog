{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <h1>Bienvenue sur mon blog </h1>

    {% for article in articles %}
    <div class="well col-md-12">
        <h2>{{ article.title }}</h2>
        <p>{{ article.content }}
        </p>
      <a href="  {{ path('article_show', { 'id': article.id }) }}"> Voir </a>
    </div>
      {% endfor %}

    <ul>
        <li>
            <a href="{{ path('article_new') }}">Creer un nouvel article</a>
        </li>
    </ul>
</div>
{% endblock %}
